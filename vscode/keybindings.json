[
  // ============================================================================
  // NUMBERED BOOKMARKS (Harpoon replacement)
  // Ctrl+1-4 to jump, Ctrl+Shift+1-4 to set
  // ============================================================================
  {
    "key": "ctrl+1",
    "command": "numberedBookmarks.jumpToBookmark1",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+2",
    "command": "numberedBookmarks.jumpToBookmark2",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+3",
    "command": "numberedBookmarks.jumpToBookmark3",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+4",
    "command": "numberedBookmarks.jumpToBookmark4",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+1",
    "command": "numberedBookmarks.toggleBookmark1",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+2",
    "command": "numberedBookmarks.toggleBookmark2",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+3",
    "command": "numberedBookmarks.toggleBookmark3",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+4",
    "command": "numberedBookmarks.toggleBookmark4",
    "when": "editorTextFocus"
  },

  // ============================================================================
  // WINDOW NAVIGATION (Ctrl+hjkl)
  // Handled by neovim but need VS Code bindings for when not in editor
  // ============================================================================
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "!editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "!editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "!editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "!editorTextFocus"
  },

  // ============================================================================
  // QUICK OPEN / FILE NAVIGATION
  // ============================================================================
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.showCommands"
  },

  // ============================================================================
  // TERMINAL
  // ============================================================================
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },

  // ============================================================================
  // ESCAPE TO CLOSE THINGS
  // ============================================================================
  {
    "key": "escape",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },

  // ============================================================================
  // FOCUS SWITCHING - when in sidebar/terminal, get back to editor
  // ============================================================================
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "sideBarFocus"
  },
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "sideBarFocus"
  },

  // ============================================================================
  // DISABLE CONFLICTING DEFAULTS
  // ============================================================================
  // Let ctrl+b pass to neovim (scroll back)
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  }

  // NOTE: ctrl+w commands (splits) are handled by neovim via passthrough
  // See vscode-neovim.ctrlKeysForNormalMode in settings.json
]
