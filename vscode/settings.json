{
  // ============================================================================
  // VSCODE-NEOVIM CONFIGURATION
  // ============================================================================
  // Local macOS
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/dmeyer/dotfiles/nvim-vscode/init.lua",
  // Remote Linux (dotfiles cloned to ~/dotfiles)
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/dotfiles/nvim-vscode/init.lua",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // Let neovim handle these keys (pass through to nvim)
  "vscode-neovim.ctrlKeysForNormalMode": [
    "a", "b", "d", "e", "f", "h", "i", "j", "k", "l", "o", "r", "u", "v", "w", "x", "y",
    "/"
  ],
  "vscode-neovim.ctrlKeysForInsertMode": ["a", "d", "h", "j", "o", "r", "u", "w"],

  // ============================================================================
  // EDITOR - Match nvim feel
  // ============================================================================
  "editor.fontSize": 14,
  "editor.fontFamily": "JetBrainsMono Nerd Font, Menlo, Monaco, monospace",
  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.renderWhitespace": "selection",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "off",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.smoothScrolling": false,
  "editor.linkedEditing": true,

  // Disable VS Code's built-in vim-like behavior (vscode-neovim handles it)
  "editor.lineHighlightBackground": "#00000000",
  "editor.renderLineHighlight": "none",

  // ============================================================================
  // WORKBENCH
  // ============================================================================
  "workbench.colorTheme": "Tokyo Night",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "multiple",
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.editor.enablePreview": false,

  // ============================================================================
  // TERMINAL
  // ============================================================================
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.defaultProfile.osx": "zsh",

  // ============================================================================
  // FILE HANDLING
  // ============================================================================
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ============================================================================
  // SEARCH
  // ============================================================================
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/dist": true,
    "**/.next": true,
    "**/coverage": true
  },

  // ============================================================================
  // GIT
  // ============================================================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // ============================================================================
  // NUMBERED BOOKMARKS (Harpoon alternative)
  // ============================================================================
  "numberedBookmarks.saveBookmarksInProject": true,

  // ============================================================================
  // ERRORLENS - Inline error display (killer feature)
  // ============================================================================
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.delay": 500,
  "errorLens.fontStyleItalic": true,
  "errorLens.gutterIconsEnabled": true,
  "errorLens.messageMaxChars": 100,

  // ============================================================================
  // TODO TREE - Track TODOs across codebase
  // ============================================================================
  "todo-tree.general.tags": ["TODO", "FIXME", "BUG", "HACK", "XXX", "NOTE", "WARN"],
  "todo-tree.highlights.defaultHighlight": {
    "gutterIcon": true,
    "foreground": "#fff",
    "type": "tag"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": { "background": "#ffab00" },
    "FIXME": { "background": "#f06292" },
    "BUG": { "background": "#ef5350" },
    "HACK": { "background": "#7c4dff" },
    "NOTE": { "background": "#2196f3" }
  },

  // ============================================================================
  // PYTHON - Ruff linter/formatter, Pylance
  // ============================================================================
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": false,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  // Ruff native server settings (ruff.lint.args is deprecated)
  "ruff.nativeServer": "on",
  "ruff.lint.select": ["E", "F", "W", "I", "UP", "B", "SIM"],

  // ============================================================================
  // SPELL CHECKER
  // ============================================================================
  "cSpell.enableFiletypes": ["markdown", "plaintext", "python", "typescript", "javascript"],
  "cSpell.userWords": [],

  // ============================================================================
  // EDITOR - Killer productivity features
  // ============================================================================
  // Sticky scroll - keep context visible
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  // Inlay hints - show type info inline
  "editor.inlayHints.enabled": "onUnlessPressed",
  // Breadcrumbs - file path navigation
  "breadcrumbs.enabled": true,
  // Quick suggestions
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  // Multi-cursor
  "editor.multiCursorModifier": "ctrlCmd",

  // ============================================================================
  // GIT GRAPH
  // ============================================================================
  "git-graph.showCurrentBranchByDefault": true,

  // ============================================================================
  // TELEMETRY OFF
  // ============================================================================
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false
}
